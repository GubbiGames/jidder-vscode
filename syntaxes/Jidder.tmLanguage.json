{
  "name": "Jidder",
  "scopeName": "source.jidder",
  "fileTypes": [
    "jdr"
  ],

  "patterns": [
    {
      "comment": "Regular String",
      "include": "#string"
    },
    {
      "comment": "Line identifier at end of line",
      "match": "(#)([0-9A-Za-z]+)\\s*$",
      "captures": {
        "1": {
          "name": "punctuation.definition.id.jidder"
        },
        "2": {
          "name": "constant.other.id.jidder"
        }
      }
    },   
    {
      "comment": "Function-style dialogue with arguments",
      "name": "meta.dialogue.function-call.jidder",
      "begin": "\\(\\s*(?=\")",
      "end": "\\)|(?=\\n)",
      "patterns": [
        {
          "include": "#string"
        },
        {
          "match": ",",
          "name": "punctuation.separator.comma.jidder"
        },
        {
          "include": "#script-body"
        }
      ]
    },    
    {
      "comment": "Illegally indented line (matches whole line)",
      "match": "^(((  )* )(?=[^ ])(?!//).*)",
      "captures": {
        "1": {
          "name": "invalid.illegal.indent.jidder"
        }
      }
    },
    {
      "comment": "Auto-choice marker + Party Name + Random + Label",
      "match": "^\\s*(>)?\\s*([A-Za-z_][A-Za-z0-9_]*)\\s*(?:(\\*)(\\d*)?)?(?:\\s*\\[\\s*([A-Za-z_][A-Za-z0-9_]*)\\s*\\])?\\s*:",
      "captures": {
        "1": {
          "name": "keyword.control.flow.jidder"
        },
        "2": {
          "name": "variable.other.constant.jidder"
        },
        "3": {
          "name": "keyword.operator.random.jidder"
        },
        "4": {
          "name": "constant.numeric.decimal.jidder"
        },
        "5": {
          "name": "entity.name.label.jidder"
        }
      }
    },     
    {
      "comment": "Script Blocks",
      "include": "#script-block"
    },
    {
      "comment": "Goto children",
      "match": "(-->)\\s*([A-Za-z_][A-Za-z0-9_]*)?",
      "captures": {
        "1": {
          "name": "keyword.control.flow.goto.jidder"
        },
        "2": {
          "name": "entity.name.label.target.jidder"
        }
      }
    },
    {
      "comment": "Goto",
      "match": "(->)\\s*([A-Za-z_][A-Za-z0-9_]*)?",
      "captures": {
        "1": {
          "name": "keyword.control.flow.goto.jidder"
        },
        "2": {
          "name": "entity.name.label.target.jidder"
        }
      }
    },        
    {
      "include": "#line-comment"
    },
    {
      "comment": "Header Section",
      "begin": "^---+",
      "beginCaptures": {
        "0": {
          "name": "punctuation.separator.jidder"
        }
      },
      "end": "^---+",
      "endCaptures": {
        "0": {
          "name": "punctuation.separator.jidder"
        }
      },
      "name": "meta.header.jidder",
      "patterns": [
        {
          "include": "#line-comment"
        },
        {
          "comment": "PlayerParty entry",
          "match": "^\\s*(PlayerParty)\\s*:([^/]*)",
          "captures": {
            "1": {
              "name": "constant.language.jidder"
            },
            "2": {
              "patterns": [
                {
                  "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b",
                  "name": "variable.other.constant.jidder"
                },
                {
                  "match": ",",
                  "name": "punctuation.separator.comma.jidder"
                }
              ]
            }
          }
        }
      ]
    }

  ],
  "repository": {
    "line-comment": {
      "name": "comment.line.double-slash.jidder",
      "begin": "//",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.comment.jidder"
        }
      },
      "end": "$"
    },
    "script-block": {
      "name": "meta.block.script.jidder",
      "begin": "\\{",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.block.begin.jidder"
        }
      },
      "end": "(\\})\\s*(\\?)?|(?=\\n)",
      "endCaptures": {
        "1": {
          "name": "punctuation.section.block.end.jidder"
        },
        "2": {
          "name": "keyword.operator.conditional.question-mark.jidder"
        }
      },
      "patterns": [
        {
          "include": "#script-body"
        }
      ]
    },
    "script-body": {
      "patterns": [
        {
          "include": "#script-block"
        },
        {
          "include": "#string"
        },
        {
          "include": "#number"
        },
        {
          "name": "meta.function-call.jidder",
          "begin": "([A-Za-z_][A-Za-z0-9_]*)\\s*\\(",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.jidder"
            }
          },
          "end": "\\)|(?=\\n)",
          "patterns": [
            {
              "include": "#script-body"
            }
          ]
        },
        {
          "name": "meta.property-access.jidder",
          "match": "([A-Za-z_][A-Za-z0-9_]*)\\s*\\.\\s*([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": {
              "name": "variable.other.object.jidder"
            },
            "2": {
              "name": "variable.other.object.property.jidder"
            }
          }
        },
        {
          "name": "keyword.control.conditional.jidder",
          "match": "\\b(if|else)\\b"
        },
        {
          "name": "keyword.operator.word.jidder",
          "match": "\\b(and|or)\\b"
        },
        {
          "name": "constant.language.jidder",
          "match": "\\b(true|false|null)\\b"
        },
        {
          "name": "keyword.operator.assignment.jidder",
          "match": "="
        },
        {
          "name": "keyword.operator.relational.jidder",
          "match": "==|!=|<=|>=|[<>]"
        },
        {
          "name": "keyword.operator.arithmetic.jidder",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.logical.jidder",
          "match": "!"
        },
        {
          "name": "variable.other.readwrite.jidder",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "string": {
      "name": "string.quoted.double.jidder",
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.jidder"
        }
      },
      "end": "\"|(?=\\n)",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.jidder"
        }
      },
      "patterns": [
        {
          "name": "constant.character.escape.jidder",
          "match": "\\\\."
        },
        {
          "name": "constant.other.placeholder.jidder",
          "match": "\\{\\d+\\}"
        }
      ]
    },
    "number": {
      "name": "constant.numeric.decimal.jidder",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    }
  }
}
